FoamFile
{
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "system";
  object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 1;


defaultFieldValues
(
    volScalarFieldValue alpha.air       1
    volScalarFieldValue alpha.c4        0
	volScalarFieldValue alpha.dust		0
);

regions
(
    cylinderToCell
    {
        //level 4;
        //refineInternal yes;

        p1 (-0.35 0.01 0);
        p2 (-0.35 0.01 0.001);
        radius 0.05;


        fieldValues
        (
			volScalarFieldValue alpha.air       0
			volScalarFieldValue alpha.c4        1
			volScalarFieldValue alpha.dust		0
        );
    }
 );

